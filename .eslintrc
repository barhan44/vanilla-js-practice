{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "require-jsdoc": "off",
    "linebreak-style": "off",
    "operator-linebreak": "off",
    "object-curly-spacing": "off",
    "arrow-parens": "off",
    "indent": "off",
    //    ignore long imports
    "max-len": ["error", { "ignorePattern": "^import\\s.+\\sfrom\\s.+;$" }]
  }
}
